pkgbase=rust
pkgname=$pkgbase-bin
pkgver=1.38.0
pkgrel=1
pkgdesc='wasm32-unknown-unknown target for rustc'
arch=('i686' 'x86_64')
url='https://www.qt.io/ide/'
license=('GPL')
depends=()
conflicts=('cargo' 'rust')
provides=('cargo' 'rust')
options=('docs' '!strip' 'debug')
source=("https://static.rust-lang.org/dist/rust-$pkgver-$CARCH-unknown-linux-gnu.tar.gz")
md5sums=('SKIP')

#pkgver() {
#    rustc --version | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
#}

#prepare() {
#}

#build() {
#}

package() {
    ${srcdir}/rust-$pkgver-$CARCH-unknown-linux-gnu/install.sh --destdir=$pkgdir --prefix=/usr --disable-ldconfig
    rm ${pkgdir}/usr/lib/rustlib/components
    rm ${pkgdir}/usr/lib/rustlib/install.log
    rm ${pkgdir}/usr/lib/rustlib/manifest*
    rm ${pkgdir}/usr/lib/rustlib/rust-installer-version
    rm ${pkgdir}/usr/lib/rustlib/uninstall.sh
}
